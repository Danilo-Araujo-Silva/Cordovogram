<?xml
	version='1.0'
	encoding='utf-8'
?>
<widget
	id="com.garoudan.pandora"
	version="0.0.1"
	xmlns="http://www.w3.org/ns/widgets"
	xmlns:cdv="http://cordova.apache.org/ns/1.0"
>
    <name>#Pandora</name>
    <description>
        Application to exchange (send and receive) encrypted multimedia (texts, images, videos) messages.
    </description>
    <author email="silva.danilo.araujo@gmail.com" href="https://goo.gl/a1yEh3">
        Danilo Ara√∫jo Silva
    </author>
    <content src="webogram/app/index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
</widget>
